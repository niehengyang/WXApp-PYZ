/**set_alarm_rules.wxss**/

page {
  background: #1a203b;
  font-family: PingFangSC-Regular;
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  flex-direction: column;
}

.alarm_name_item {
  width: 690rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: space-between;
}

.alarm_name_label {
  width: 200rpx;
  height: 44rpx;
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: 0.24rpx;
  display: flex;
  align-items: center;
  align-content: center;
  text-indent: 30rpx;
}

.alarm_name {
  width: 240rpx;
  height: 44rpx;
  font-size: 32rpx;
  color: #8e98b4;
  letter-spacing: 0.24rpx;
  text-align: center;
}

.alarm_condition_box {
  width: 690rpx;
  background: #fff;
  border-radius: 8rpx;
}

.crad_title {
  width: 100%;
  height: 72rpx;
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: 0.24rpx;
  border-bottom: 2rpx solid #f0f0f4;
  display: flex;
  align-items: center;
  align-content: center;
  text-indent: 30rpx;
}

.set_temperature_item {
  width: 100%;
  height: 120rpx;
  border-bottom: 2rpx solid #f0f0f4;
  font-size: 32rpx;
  color: #8e98b4;
  letter-spacing: 0.24rpx;
  display: flex;
  align-content: center;
  align-items: center;
  flex-direction: row;
}

.set_alarm_style, .set_alarm_condition, .set_size {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  flex-direction: row;
  justify-content: center;
}

.alarm_style, .alarm_condition, .size_input {
  width: 100%;
  height: 50rpx;
  font-size: 32rpx;
  color: #8e98b4;
  letter-spacing: 0.24rpx;
  text-align: center;
}
.del_icon{
  width: 48rpx;
  height: 48rpx;
}
.input-placeholder {
  font-size: 32rpx;
  color: #8e98b4;
  letter-spacing: 0.24rpx;
}

.size_input_fir, .size_input_end {
  width: 100rpx;
  height: 64rpx;
  text-align: center;
}

.thread {
  width: 30rpx;
  border-bottom: 2rpx solid #8e98b4;
}

.set_humidity_item {
  width: 100%;
  height: 120rpx;
  font-size: 32rpx;
  color: #8e98b4;
  letter-spacing: 0.24rpx;
}
.add_alarmcondition_item{
 width: 690rpx;
  height: 140rpx;
  background: #fff;
  display: flex;
  border-radius: 8rpx;
  align-items: center;
  align-content: center;
  justify-content: center;
  margin-top: 30rpx;
}
.addalarm_btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.add_alarm {
  width: 220rpx;
  height: 120rpx;
  color: #1a203b;
  font-size: 32rpx;
  letter-spacing: 0.24rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.addalarm_btn_item {
  width: 80rpx;
  height: 100%;
  padding-top: 5rpx;
  display: flex;
  align-items: center;
  align-content: center;
}
