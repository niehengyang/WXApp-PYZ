page {
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background-color: #f2eada;
}

.add_box {
  width: 100%;
}

.group_list_box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.add_group_btn {
  width: 680rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  background-color: #130c0e;
  font-size: 32rpx;
  color: #fffffb;
}

.group_list_item {
  width: 100%;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.group_card {
  width: 680rpx;
  height: 400rpx;
  display: flex;
  align-content: center;
  align-items: center;
  flex-direction: column;
  border: 2rpx solid cyan;
  margin-bottom: 30rpx;
  background-color: #464547;
  color: #fffffb;
  justify-content: center;
}
.word_item{
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: absolute;
  color: #ea66a6;
}
.group_name{
font-size: 64rpx;
}
.ranking{
font-size: 30rpx;
}