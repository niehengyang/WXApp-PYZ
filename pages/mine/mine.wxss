/**mine.wxss**/

page {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
  font-family: PingFangSC-Regular;
}

.heard_box {
  width: 100%;
  height: 379rpx;
  display: flex;
  flex-direction: column;
}

.heard_bg {
  width: 100%;
  height: 100%;
}

.heard_show_box {
  width: 100%;
  position: absolute;
}

.logo_img {
  width: 100%;
  height: 220rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.username_title {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  border: 2rpx solid none;
}

.username_value {
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 2rpx;
}

.logo_svg {
  width: 154rpx;
  height: 154rpx;
  box-shadow: 0 0 110rpx 0 #2e3a64;
  border-radius: 77rpx;
}

.weui-cells {
  margin-top: 35rpx;
  background-color: rgba(255, 255, 255, 0.6);
  line-height: 1.47058824;
  font-size: 34rpx;
  overflow: hidden;
  position: relative;
  border-color: rgba(255, 255, 255, 0.6);
}

.weui-cell_access {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  color: inherit;
}

.weui-cell {
  padding: 20rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: -0.16rpx;
}

.weui-cell_ft {
  text-align: right;
  color: #999;
}

.weui-cell_access .weui-cell__ft:after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 4rpx;
}

.weui-cell_access .weui-cell__ft {
  padding-right: 26rpx;
  position: relative;
}

.weui_exit {
  background: #ffffff;
  width: 100%;
  height: 88rpx;
  margin-top: 20rpx;
}

.exit_btn {
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: 40rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

