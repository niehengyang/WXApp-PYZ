page {
  width: 100%;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.top_box {
  width: 100%;
  height: 460rpx;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.Head_portrait {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.other_people_box {
  width: 100%;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
}

.user_ranking_card {
  width: 100%;
  display: flex;
  align-content: center;
  align-items: center;
  flex-direction: row;
  justify-content: center;
  border: 2rpx solid bisque;
}

.num {
  width: 50%;
  text-align: center;
}

.suspension_box, .suspension_box1 {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid bisque;
  background-color: blue;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  position: fixed;
  bottom: 0;
}
.model_card{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  justify-content: center;
}