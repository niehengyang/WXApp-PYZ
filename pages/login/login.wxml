<!--index.wxml-->
<view class='page_bg'>
  <image mode="aspectFill" class='bg_image' src='/images/login/login_bg.png' />
  <form class='login_box'>
    <view class='username_item'>
      <image class='username_svg' src='{{username_img_path}}' />
      <input class='bussiness_input' type='text' style="height:40rpx  line-height:40rpx maxlength='20'" bindinput='userNameInput' placeholder='输入帐号' bindfocus='username_focus_on' bindblur='username_focus_off'></input>
    </view>
    <view class='password_item'>
      <image class='password_svg' src='{{password_img_path}}' />
      <input class='bussiness_input' type='text' style="height:40px line-height:40px" bindinput='passWordInput' password="true" placeholder='输入密码' bindfocus='password_focus_on' bindblur='password_focus_off'></input>
    </view>
    <button class='login_submit' bindtap="logIn_free">登录</button>
  </form>
  <text class='test_btn' bindtap='home_page'>点击此处进入试用</text>
</view>