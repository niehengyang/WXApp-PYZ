/**login.wxss**/
page{
  width: 100%;
  height: 100%;
  font-family: PingFangSC-Regular;
}
.page_bg{
  width: 100%;
  height: 100%;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
}
.bg_image{
  width: 100%;
  height: 100%;
}
.login_box{
  width: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  bottom: 25.3%;
}
.login_submit{
  width: 520rpx;
  height: 88rpx;
  background: #0076ff;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 30rpx;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
}
.username_item,.password_item{
  border-bottom:  1rpx solid #D9DDE4;
  width: 520rpx;
  height: 60rpx;
  margin-bottom: 65rpx;
  display: flex;
  align-items: center;
}
.username_svg , .password_svg{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
  float: left;
}
.bussiness_input{
  width: 450rpx;
  height: 38rpx;
  font-size: 32rpx;
  color: #D9DDE4;
  letter-spacing: -0.78rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  align-content: center;
}
.test_btn{
  width: 100%;
  position: absolute;
  bottom: 20rpx;
  text-indent: 30rpx;
  color: blue;
  font-size: 36rpx;
}