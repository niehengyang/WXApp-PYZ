/**login.wxss**/

page {
  width: 100%;
  height: 100%;
  font-family: PingFangSC-Regular;
}

.page_bg {
  width: 100%;
  height: 100%;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.bg_image {
  width: 100%;
  height: 100%;
}

.login_box {
  width: 100%;
  position: absolute;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  bottom: 25.3%;
}

.login_submit {
  width: 520rpx;
  height: 88rpx;
  background: #0076ff;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 30rpx;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: center;
}

.username_item, .password_item {
  border-bottom: 1rpx solid #d9dde4;
  width: 520rpx;
  height: 60rpx;
  margin-bottom: 65rpx;
  display: flex;
  align-items: center;
}

.username_svg, .password_svg {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
  float: left;
}

.bussiness_input {
  width: 450rpx;
  height: 38rpx;
  font-size: 32rpx;
  color: #d9dde4;
  letter-spacing: -0.78rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  align-content: center;
}

.page_ft {
  position: absolute;
  width: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  flex-direction: column;
  bottom: 18%;
}

.xia {
  width: 520rpx;
  float: left;
  color: #737373;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: space-between;
}

.xia navigator {
  float: left;
  margin: 0 6rpx;
  color: dodgerblue;
  font-size: 30rpx;
}

.other_login {
  width: 520rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  flex-direction: column;
}

.di {
  font-size: 24rpx;
  color: #737373;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.san {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  align-content: center;
}

.wx_img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 10rpx;
}

.test_btn {
  position: absolute;
  bottom: 20rpx;
  text-indent: 30rpx;
  color: blue;
  font-size: 36rpx;
}
