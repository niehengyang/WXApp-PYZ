/**login.wxss**/
page{
  width: 100%;
  height: 100%;
   font-family: PingFangSC-Regular;
}
.heard_view{
  width: 100%;
  height: 100%;
}
.bg_image{
  width: 100%;
  height: 110%;
}

.login_box{
  position: absolute;
  bottom: 25.3%;
  left: 15.5%;
  right: 15.2%;
  top: 49.5%;
  text-align: center;
}


.login_submit{
  width: 520rpx;
  height: 88rpx;
  background: #0076ff;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 30rpx;
  text-align: center;
}
.username_item,.password_item{
  border-bottom:  1rpx solid #D9DDE4;
  width: 520rpx;
  height: 60rpx;
  margin-bottom: 65rpx;
  display: flex;
  align-items: center;
}
.username_svg , .password_svg{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
  float: left;
}
.bussiness_input{
  width: 450rpx;
  height: 40rpx;
  font-size: 32rpx;
  color: #D9DDE4;
  letter-spacing: -0.78rpx;
  line-height: 38rpx;
  text-align: left;
}