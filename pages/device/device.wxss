/**device.wxss**/
page,
.page,
.page__bd{
    height: 100%;
   
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
    
}
.weui-navbar__slider{
  width: 374rpx;
  background-color: #005BEA; 
}
.weui-navbar__item{
  background: #1A203B;
font-family: PingFangSC-Regular;
font-size: 32rpx;
color: #A0A0A0;
letter-spacing: -0.16rpx;
}
.weui-navbar__item.weui-bar__item_on {
color: #005BEA;

}

/**以下是搜索框样式**/
.weui-search-bar{
width: 100%;
border: unset;
background: #F0F0F0;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.weui-tab__content {
  width: 375px;
  height: 558px;
padding-top:10rpx;
display: flex;
flex-direction: column;
text-align:center;
align-items: center;
align-content: center;
background:	#F0F0F0;
}
.weui-search-bar__label{
  background-color:	#E0E0E0;
}
/**以下是主体样式**/
.device_box{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.device-card_box{
  width: 690rpx;
  height: 290rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 12rpx 0 rgba(170,183,212,0.80);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.deivce-id_item{
  width: 670rpx;
  height: 60rpx;
  border: none;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.device-id{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #1A203B;
  letter-spacing: 1rpx;
  text-indent: 20rpx;
}
.device-size_item{
  width: 100%;
  height: 34rpx;
}
.device-del{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #8E98B4;
  letter-spacing: 1rpx;
  float: left;
  margin-left: 20rpx;
}
.device-style{
font-family: PingFangSC-Regular;
font-size: 24rpx;
color: #8E98B4;
letter-spacing: 1rpx;
float: right;
margin-right:20rpx; 
}
.device-show_box{
  height: 150rpx;
  opacity: 0.19;
  background: rgba(84,141,236,0.50);
  border-radius: 8rpx;
  margin: 20rpx;
  display: flex;
  text-align: center;
}
.humidity_item{
  flex: 1;
  margin-top:30rpx; 
  text-align: center;
}
  .humidity_svg{
    width: 50rpx;
    height: 64rpx;
  }
  .humidity_size{
    width: 152rpx;
    height: 100rpx;
    font-family: PingFangSC-Regular;
    font-size: 36px;
    letter-spacing: -0.08px;
  }
  .temperature_item{
    flex: 1;
    margin-top:30rpx;
    text-align: center;
  }
  .temperature_svg{
  width: 44rpx;
  height: 64rpx;
  }
  .temperature_size{
  width: 138rpx;
  height: 100rpx;
  font-family: PingFangSC-Regular;
  font-size: 36px;
  letter-spacing: -0.08px;
  }