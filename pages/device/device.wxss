/**device.wxss**/

/**页面整体样式**/

page, .page, .page__bd {
  width: 100%;
  height: 100%;
  font-family: PingFangSC-Regular;
}

.page__bd {
  padding-bottom: 0;
}

.weui-navbar {
  width: 100%;
  height: 88rpx;
}

.weui-tab__content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  align-content: center;
  background: #f0f0f0;
}

.weui-navbar__slider {
  width: 332rpx;
  background: linear-gradient(to right, #00c6fb, #005bea);
}

.weui-navbar__item {
  background: #1a203b;
  font-size: 32rpx;
  color: #a0a0a0;
  letter-spacing: -0.16rpx;
}

.weui-navbar__item.weui-bar__item_on {
  color: #005bea;
}

.weui-tab__panel {
  padding-top: 88rpx;
}

/**以下是搜索框样式**/

.weui-search-bar {
  width: 730rpx;
  border: unset;
  background: #f0f0f0;
}

.weui-search-bar__box {
  height: 60rpx;
}

.searchbar-result {
  margin-top: 0;
  font-size: 28rpx;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 24rpx 30rpx 24rpx 70rpx;
}

.weui-search-bar__label {
  height: 60rpx;
  background-color: #e0e0e0;
}

/**以下是主体样式**/

.device_box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.device-card_box {
  width: 690rpx;
  height: 290rpx;
  background: #fff;
  box-shadow: 0 4rpx 12rpx 0 rgba(170, 183, 212, 0.19);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.deivce-id_item {
  width: 100%;
  height: 60rpx;
  border: none;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.device-id {
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: 1rpx;
  text-indent: 20rpx;
}

.device-size_item {
  width: 100%;
  height: 34rpx;
}

.device-del {
  font-size: 24rpx;
  color: #8e98b4;
  letter-spacing: 1rpx;
  float: left;
  margin-left: 20rpx;
}

.device-style {
  font-size: 24rpx;
  color: #8e98b4;
  letter-spacing: 1rpx;
  float: right;
  margin-right: 20rpx;
}

.device_show_item {
  width: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  margin-top: 20rpx;
}

.device-show_box {
  width: 650rpx;
  height: 150rpx;
  background: rgba(84, 141, 236, 0.10);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  left: 20rpx;
  right: 20rpx;
}

.humidity_item, .temperature_item {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.humidity_svg, .temperature_svg {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.humidity_size, .temperature_size {
  width: 152rpx;
  height: 100%;
  font-size: 72rpx;
  letter-spacing: -0.16rpx;
  color: #8e98b4;
  display: flex;
  align-items: center;
}

/**以下是信息卡样式**/

.device-info_card {
  width: 690rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx 0 rgba(170, 183, 212, 0.80);
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.nav_item {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: space-between;
  flex-direction: row;
}

.team_name {
  width: 120rpx;
  height: 60rpx;
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: -0.16rpx;
  display: flex;
  align-items: center;
  align-content: center;
  margin-left: 20rpx;
}

.team-company {
  width: 140rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #8e98b4;
  letter-spacing: -0.16rpx;
  display: flex;
  align-items: center;
  align-content: center;
}

.humidity_item {
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}
