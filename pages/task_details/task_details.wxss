/**task_details.wxss**/

page {
  background: #1a203b;
  display: flex;
  justify-content: center;
  font-family: PingFangSC-Regular;
}

.task-details_box {
  width: 690rpx;
  height: 1000rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-content: flex-start;
}

.name_item, .device_item, .time_item, .threshold-value_item, .alarms_item {
  width: 660rpx;
  height: 140rpx;
  border-bottom: 2rpx solid;
  border-bottom-color: rgba(233, 231, 239, 0.5);
  display: flex;
  justify-content: space-between;
}

.task_name, .device_name, .maede_time, .threshold-value_name, .number_alarms {
  height: 100%;
  width: 140rpx;
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: 0.24rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: flex-start;
}

.name_size, .device_id, .time_size, .threshold-value_size {
  height: 100%;
  width: 300rpx;
  font-size: 32rpx;
  color: rgba(142, 152, 180, 0.7);
  letter-spacing: 0.24rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: flex-end;
}

.alarms_size {
  height: 100%;
  width: 300rpx;
  font-size: 32rpx;
  letter-spacing: 0.24rpx;
  color: rgba(204, 0, 0, 1);
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: flex-end;
}
