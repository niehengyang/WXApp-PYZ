/**alarm.wxss**/

page, .page, .page__bd {
  height: 100%;
  width: 100%;
  font-family: PingFangSC-Regular;
}

.page__bd {
  padding-bottom: 0;
  background: #1a203b;
}

.warning_rules_item {
  width: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.warning_rules_btn {
  width: 690rpx;
  height: 88rpx;
  background: #0076ff;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 0.58rpx;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.weui-tab__content {
  padding-top: 100rpx;
}

.weui-navbar {
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #161823;
}

.weui-navbar__item {
  background: #1a203b;
  height: 46rpx;
  font-size: 32rpx;
  color: #a0a0a0;
  letter-spacing: -0.16rpx;
  display: flex;
  justify-content: center;
}

.weui-navbar__slider {
  width: 332rpx;
  background: linear-gradient(to right, #00c6fb, #005bea);
  height: 4rpx;
}

.weui-navbar__item.weui-bar__item_on {
  color: #1185e4;
}

.weui-tab__content {
  background-color: #1a203b;
  width: 100%;
}

.weui-tab__panel {
  box-sizing: border-box;
  width: 100%;
  height: 1200rpx;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  display: flex;
  justify-content: center;
  padding-top: unset;
}

.already-processed_box {
  width: 690rpx;
  height: 1062rpx;
  background: #ffffff;
  border-radius: 8rpx;
  margin-top:8rpx; 
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-content: center;
  align-items: center;
}

.date_label {
  width: 100%;
  height: 44rpx;
  text-indent: 30rpx;
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: 0.24rpx;
  margin-top: 20rpx;
}

.processed_item {
  width: 656rpx;
  margin-top: 20rpx;
  border-bottom: 2rpx solid;
  border-bottom-color: #f0f0f4;
  display: flex;
  flex-direction: row;
}

.red_icon {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background: #c00;
  margin: 16rpx;
}

.device_item {
  align-items: center;
}

.device_label {
  width: 600rpx;
  height: 44rpx;
  display: flex;
  align-content: space-between;
  align-items: center;
  justify-content: space-between;
}

.devie_name {
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: 0.24rpx;
}

.device_style {
  font-size: 32rpx;
  color: #CC0000;
  letter-spacing: 0.24rpx;
}
.alarm_reason{
width: 100%;
font-size: 28rpx;
color: #1A203B;
letter-spacing: 0.28rpx;
height: 40rpx;
}
.time_label {
  width: 100%;
  font-size: 24rpx;
  color: #8e98b4;
  letter-spacing: 0.24rpx;
  float: left;
}
