/**details_equipment_group.wxss**/

page {
  font-family: PingFangSC-Regular;
}

.page_start {
  width: 100%;
  height: 1206rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  background-color: #f0f0f0;
}

.group_info {
  width: 650rpx;
  height: 170rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.group-name {
  width: 650rpx;
  height: 80rpx;
  border-bottom: 2rpx solid rgba(35, 66, 103, 0.39);
  display: flex;
  align-items: center;
  text-indent: 10rpx;
}

.group_name {
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: -0.16rpx;
}

.tel_item {
  width: 650rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.address_icon {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
}

.address_value {
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: -0.22rpx;
}

/**以下是选项卡样式**/

.device-card_box {
  width: 690rpx;
  height: 290rpx;
  background: #fff;
  box-shadow: 0 4rpx 12rpx 0 rgba(170, 183, 212, 0.19);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.deivce-id_item {
  width: 100%;
  height: 60rpx;
  border: none;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.device-id {
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: 1rpx;
  text-indent: 20rpx;
}

.device-size_item {
  width: 100%;
  height: 34rpx;
}

.device-del {
  font-size: 24rpx;
  color: #8e98b4;
  letter-spacing: 1rpx;
  float: left;
  margin-left: 20rpx;
}

.device-style {
  font-size: 24rpx;
  color: #8e98b4;
  letter-spacing: 1rpx;
  float: right;
  margin-right: 20rpx;
}

.device_show_item {
  width: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  margin-top: 20rpx;
}

.device-show_box {
  width: 650rpx;
  height: 150rpx;
  background: rgba(84, 141, 236, 0.10);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.humidity_item, .temperature_item {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.humidity_svg, .temperature_svg {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.humidity_size, .temperature_size {
  width: 152rpx;
  height: 100%;
  font-size: 72rpx;
  letter-spacing: -0.16rpx;
  color: #8e98b4;
  display: flex;
  align-items: center;
}
