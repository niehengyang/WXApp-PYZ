/**addtask.wxss**/

page {
  background: #1a203b;
  display: flex;
  justify-content: center;
}

.addtask_box {
  width: 690rpx;
  height: 1000rpx;
  background: #fff;
  border-radius: 4px;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-content: flex-start;
}

.name_item, .device_item, .threshold-value_item {
  width: 660rpx;
  height: 100rpx;
  border-bottom: 1px solid;
  border-bottom-color: rgba(233, 231, 239, 1);
  display: flex;
  align-items: center;
  align-content: center;
}

.task_name, .device_name, .threshold-value_name {
  width: 70rpx;
  height: 50rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #1a203b;
  letter-spacing: 0.24rpx;
  margin: 20rpx;
  display: flex;
  align-items: center;
  align-content: center;
}

.name_input, .device_input, .threshold-value_input {
  width: 550rpx;
  height: 70rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  letter-spacing: 0.2rpx;
  display: flex;
  align-items: center;
  align-content: center;
}

.submit_btn {
  width: 640rpx;
  height: 88rpx;
  background: #0076ff;
  border-radius: 8rpx;
  font-size: 36rpx;
  color: #fff;
  letter-spacing: 0.24rpx;
  text-align: center;
  margin-top : 580rpx;
}
